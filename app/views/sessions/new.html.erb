<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <% if notice %>
            <div class="alert alert-success" role="alert">
              <%= notice %>
            </div>
          <% end %>

          <% if alert %>
            <div class="alert alert-danger" role="alert">
              <%= alert %>
            </div>
          <% end %>

          <h1 class="text-center">Sign in</h1>

          <%= form_with(url: sign_in_path, class: 'mt-4') do |form| %>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :password %>
              <%= form.password_field :password, required: true, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.submit "Sign in", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <%= link_to "Sign up", sign_up_path %> |
            <%= link_to "Forgot your password?", new_identity_password_reset_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
