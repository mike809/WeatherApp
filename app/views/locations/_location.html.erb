<% data = location.forecast.periods.first %>

<div class="row justify-content-center text-center">
  <div class="col-sm-4 col-md-3 col-xl-2">
    <div class="card mb-4" style="background-image: url('<%= data['icon'] %>'); background-position: center; background-size: cover; background-repeat: no-repeat;border-radius: 25px;">
      <div class="overlay card-body p-4">
        <div class="d-flex justify-content-between pb-2">
          <div>
            <h2 class="display-2">
              <strong>
                <%= data["temperature"] %> <%= data["temperatureUnit"] %>
              </strong>
            </h2>
            <p class="mb-0"><%= location.address %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
