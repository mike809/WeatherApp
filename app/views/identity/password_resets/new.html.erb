<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <% if alert %>
            <div class="alert alert-danger">
              <%= alert %>
            </div>
          <% end %>

          <h1 class="text-center">Forgot your password?</h1>

          <%= form_with(url: identity_password_reset_path, class: 'mt-4') do |form| %>
            <div class="form-group mb-3">
              <%= form.label :email %>
              <%= form.email_field :email, required: true, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.submit "Send password reset email", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <%= link_to "Log in", sign_in_path %> |
            <%= link_to "Sign up", sign_up_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
