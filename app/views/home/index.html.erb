<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h2>Signed in as <strong><%= Current.user.email %></strong></h2>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h4>Login and verification</h4>
              <%= link_to "Change password", edit_password_path, class: 'btn btn-primary btn-block mb-3' %>
              <%= link_to "Change email address", edit_identity_email_path, class: 'btn btn-primary btn-block mb-3' %>
            </div>
            <div class="col-md-6">
              <h4>Access history</h4>
              <%= link_to "Devices & Sessions", sessions_path, class: 'btn btn-primary btn-block mb-3' %>
            </div>
          </div>
        </div>
        <div class="card-footer text-center">
          <%= button_to "Log out", Current.session, method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
